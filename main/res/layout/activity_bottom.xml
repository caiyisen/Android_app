<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"

    android:weightSum="3"
    android:background="@drawable/bottom_bar">

    <LinearLayout
        android:paddingTop="4dp"
        android:paddingBottom="0dp"
        android:id="@+id/ll_ground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_ground"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/tab_ground_pressed" />

        <TextView
            android:id="@+id/tv_ground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="广场"
            android:textSize="8dp"
            android:textColor="#1B940A"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="4dp"
        android:paddingBottom="0dp"
        android:id="@+id/ll_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/tab_message_unpressed" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="消息"
            android:textSize="8dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="4dp"
        android:paddingBottom="0dp"
        android:id="@+id/ll_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_mine"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/tab_mine_unpressed" />

        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="活动"
            android:textSize="8dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>