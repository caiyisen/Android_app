<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__user_valid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.android.dragonfly.Activity_UserValid"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户验证"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30px"
            android:textColor="#000000"/>

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证成功后，可以开始发布消息"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        />
    <TableLayout
        android:layout_marginTop="250px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <EditText
                android:id="@+id/name"
                android:hint="请输入您的真实姓名"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/schoolid"
                android:hint="学号"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/add_idcard"
        android:layout_width="500px"
        android:layout_height="750px"
        android:background="#ffffff"
        android:text="+"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传学生证或校园卡照片"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/add_idcard"
        android:layout_marginTop="100px"/>
    <Button
        android:id="@+id/compile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/add_idcard"
        android:layout_marginTop="200px"/>

</RelativeLayout>

</RelativeLayout>
