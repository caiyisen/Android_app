<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.android.dragonfly.Activity_login"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30px"
            android:textColor="#000000"/>

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <ImageView
        android:id="@+id/p1"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/dragonfly_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p1"
        android:orientation="vertical"
        android:id="@+id/tableLayout">
        <TableRow>
            <EditText
                android:id="@+id/username"
                android:layout_weight="1"
                android:hint="用户名"/>
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/password"
                android:layout_weight="1"
                android:hint="密码"
                android:inputType="textPassword"/>
        </TableRow>
        <TableRow>
            <CheckBox
                android:id="@+id/auto"
                android:text="下次自动登录"
                />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:background="@color/colorPrimaryDark"
        android:text="登录"/>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_login"
        android:background="@color/colorPrimaryDark"
        android:text="注册"
        android:layout_marginTop="20px"
        />
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_register"
        android:layout_marginTop="130px"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="430px"
            android:layout_height="2px"
            android:background="#D3D3D3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="或"/>
        <ImageView
            android:layout_width="530px"
            android:layout_height="2px"
            android:background="#D3D3D3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout2"
        android:layout_marginTop="80px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="110px"
            android:layout_height="110px"
            android:background="@drawable/weibo"
            android:layout_marginLeft="140px"
            />
        <ImageView
            android:layout_width="110px"
            android:layout_height="110px"
            android:background="@drawable/qq"
            android:layout_marginLeft="180px"/>
        <ImageView
            android:layout_width="110px"
            android:layout_height="110px"
            android:background="@drawable/wechat"
            android:layout_marginLeft="180px"/>
    </LinearLayout>
</RelativeLayout>


</RelativeLayout>
