<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    android:layout_marginTop="12dp"
    android:layout_marginBottom="15dp"

    android:orientation="vertical"
    android:focusable="false"
    android:clickable="false"
    android:focusableInTouchMode="false">
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/title_icon"
            android:src="@drawable/tab_mine_pressed"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="某同学"
                android:textStyle="bold"
                android:typeface="serif"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_time"
                    android:text="6分钟前"
                    android:textSize="11dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/send_location"
                    android:text="来自 [中山大学至善园6号]"
                    android:textSize="11dp"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/send_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="有没有人要取快递啊   (๑•ั็ω•็ั๑) (๑•ั็ω•็ั๑) (๑•ั็ω•็ั๑) (๑•ั็ω•็ั๑) (๑•ั็ω•็ั๑) (๑•ั็ω•็ั๑)求帮拿送到至善园6号"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#BFBFBF"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:background="#BFBFBF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:clickable="true"
        android:background="@drawable/ripple_bg"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/receive"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:tag="0"
                android:background="@drawable/like"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="0dp"
                android:text="接单"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#BFBFBF"
            android:layout_marginLeft="0dp"/>
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"

            android:background="@drawable/ripple_bg"

            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/share"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="0dp"
                android:text="分享"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#BFBFBF"
            android:layout_marginLeft="0dp"/>
        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:clickable="true"

            android:background="@drawable/ripple_bg"

            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/comment"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="0dp"

                android:text="评论"/>
        </LinearLayout>





    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="0dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="#d3d3d3"/>

</LinearLayout>